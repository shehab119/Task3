<!DOCTYPE html>
<html lang="en">
<head>
  <title>Student Database Table</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body>
    
    <a href="/student"><button type="submit" class="btn btn-info">Add More Into Student Databases </button></a>
    <a href="/"><button type="submit" class="btn btn-info">Home</button></a>
    <hr>
    <form action="/table" method="POST">
<div class="container">
  <h2>university_db</h2>
  <p>DBs "university_db", Table Name "students":</p>            
  <table class="table table-bordered">
    <thead>
      <tr>
          <th>NO</th>
        <th>ID</th>
        <th>NAME</th>
        <th>DEPARTMENT</th>
        <th>AGE</th>
        <th>CONTRACT_NUMBER</th>
      
      </tr>
    </thead>
    <tbody> <% for(var i=0; i < info.length; i++) { %>
      <tr>
          <td># <%= (i+1) %></td>
          <td><%= info[i].stdid %></td>
           <td><%= info[i].stdname %></td>
           <td><%= info[i].stddpt %></td>
           <td><%= info[i].stdage %></td>
           <td><%= info[i].stdcn %></td>
      </tr>
  <% } %>
     
    </tbody>
  </table>
</div>
</form>
</body>
</html>

